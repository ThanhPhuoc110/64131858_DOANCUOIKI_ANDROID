<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/botuvungbg"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/imgAddQL"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginStart="256dp"
        android:layout_marginBottom="52dp"
        android:src="@drawable/ic_add"
        android:tint="@color/colorBlue"
        app:layout_constraintBottom_toTopOf="@+id/listviewQL"
        app:layout_constraintStart_toEndOf="@+id/imgBackQL"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Quản lý "
        android:fontFamily="@font/bungee"
        android:textSize="28sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listviewQL"
        android:layout_width="399dp"
        android:layout_height="600dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="135dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imgBackQL"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginBottom="52dp"
        android:src="@drawable/ic_back"
        android:tint="@color/colorBlue"
        app:layout_constraintBottom_toTopOf="@+id/listviewQL"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UseAppTint" />
</androidx.constraintlayout.widget.ConstraintLayout>